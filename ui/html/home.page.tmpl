{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Gists</h2>
    {{if .Gists}}
        <table>
            <tr>
                <th>Title</th>
                <th>Created At</th>
                <th>ID</th>
            </tr>
            {{range .Gists}}
            <tr>
                <td><a href="/gist?id={{.ID}}">{{.Title}}</a></td>
                <td>{{.FormatTime .CreatedAt}}</td>
                <td>#{{.ID}}</td>
            </tr>
            {{end}}
        </table>
    {{else}}
        <p>There are no gists to see here yet!</p>
    {{end}}
{{end}}
